<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block page_title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/sadiantcms/css/main.css') }}" type="text/css" media="all" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('bundles/sadiantcms/js/jquery-1.6.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sadiantcms/js/global.js') }}" type="text/javascript"></script>
        {% block javascripts_assets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {% set body_class = body_class|default('') %}
    <body{% if body_class != '' %} class="{{ body_class }}"{% endif %}>
        <div id="page">
            {% block notice %}
                {% if app.session.hasFlash('notice') %}
                    <div id="notice">
                        <p>{{ app.session.flash('notice') }}</p>
                    </div>
                {% endif %}
            {% endblock %}
          
            {% block global_error %}
                {% if app.session.hasFlash('error') %}
                    <div id="error">
                        <p>{{ app.session.flash('error') }}</p>
                    </div>
                {% endif %}
            {% endblock %}
            <div id="header">
                {% render "SadiantCmsBundle:User:boxComponent" %}
                {% include "SadiantCmsBundle::navigation.html.twig" %}
                <div id="header_bottom">
                    <div></div>
                </div>
            </div>

            <div id="main">
                <div id="content">
                    {% block content %}{% endblock %}
                </div>
            </div>
         </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
