{% extends "SadiantCmsBundle::layout.html.twig" %}

{% block page_title %}
Edition layout
{% endblock %}

{% block content %}
<h1>{{ title }}</h1>

<a href="{{ url('layout_list') }}">Back to list</a>
<br />
Form:
{% if layout is defined %} 
<form action="{{ url('layout_update', { 'id': layout.id }) }}" method="post" {{ form_enctype(form) }}>
{% else %}
<form action="{{ url('layout_new') }}" method="post" {{ form_enctype(form) }}>
{% endif %}
    {{ form_widget(form) }}
    
    <input type="submit" />
</form>
<br />
<br />
{% if layout is defined %}
<a href="{{ url('layout_delete', { 'id': layout.id }) }}">Delete</a>
{% endif %}
<a href="{{ url('layout_list') }}">Back to list</a>
{% endblock %}