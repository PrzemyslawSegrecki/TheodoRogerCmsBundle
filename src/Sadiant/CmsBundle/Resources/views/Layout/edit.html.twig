{% extends "SadiantCmsBundle::layout.html.twig" %}

{% block page_title %}
Edition layout
{% endblock %}

{% block content %}
<h1>{{ title }}</h1>

<a href="{{ url('layout_list') }}">Back to list</a>
<br />
Form:
{% if layout is defined %} 
<form action="{{ url('layout_update', { 'id': layout.id }) }}" method="post" {{ form_enctype(form) }}>
{% else %}
<form action="{{ url('layout_new') }}" method="post" {{ form_enctype(form) }}>
{% endif %}
    <div>
        {{ form_label(form.name) }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
    </div>
    <div>
        {{ form_label(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content) }}
    </div>
    <div>
        {{ form_label(form.content_type) }}
        {{ form_errors(form.content_type) }}
        {{ form_widget(form.content_type) }}
    </div>
    
    <input type="submit" />
</form>
<br />
<br />
{% if layout is defined %}
<a href="{{ url('layout_remove', { 'id': layout.id }) }}">Remove</a>
{% endif %}
<a href="{{ url('layout_list') }}">Back to list</a>
{% endblock %}