{% extends "TheodoThothCmsBundle::layout.html.twig" %}

{% set body_class = 'reversed' %}
{% set tab = 'design' %}
{% set nav = 'snippets' %}

{% block javascripts_assets %}
<script src="{{ asset('bundles/theodothothcms/js/page.js') }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/theodothothcms/css/page.css') }}" type="text/css" media="all" />
{% endblock %}

{% block page_title %}
{% trans %}Edit Snippet{% endtrans %}
{% endblock %}

{% form_theme form _self %}
{% block _snippet_name_widget %}
    <input class="textbox activate" type="text" {{ block('widget_attributes') }} value="{{ value }}" />
{% endblock %}
{% block _snippet_content_widget %}
{% spaceless %}
    <textarea class="textarea large" style="width: 100%;" {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
{% endblock %}

{% block content %}
    {% if snippet is defined %}
    <h1>{% trans %}Edit Snippet{% endtrans %}</h1>
    <form class="edit_snippet" action="{{ url('snippet_update', { 'id': snippet.id }) }}" method="post" {{ form_enctype(form) }}>
    {% else %}
    <h1>{% trans %}New Snippet{% endtrans %}</h1>
    <form class="edit_snippet" action="{{ url('snippet_new') }}" method="post" {{ form_enctype(form) }}>
    {% endif %}
        <div class="form_area">
            <p class="title">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </p>
            <p class="content">
                {{ form_label(form.content) }}
                {{ form_errors(form.content) }}
                {{ form_widget(form.content) }}
            </p>
            {{ form_rest(form) }}
        </div>
        <p class="buttons" style="clear: left;">
            <input type="submit" value="{% trans %}Save Changes{% endtrans %}" name="save-and-list" />
            <input type="submit" value="{% trans %}Save and Continue Editing{% endtrans %}" name="save-and-edit" />
            {% trans %}or{% endtrans %}
            <a class="list-snippet" href="{{ url('snippet_list') }}">{% trans %}Cancel{% endtrans %}</a>
            {# {% if snippet is defined %}
            <a href="{{ url('snippet_remove', { 'id': snippet.id }) }}">{% trans %}Remove{% endtrans %}</a>
            {% endif %}
            <a class="list-snippet" href="{{ url('snippet_list') }}">{% trans %}Back to list{% endtrans %}</a> #}
        </p>
        {# <p class="updated_line">
          {% trans %}Last Updated by <strong>Administrator</strong> at 07:27 am on January 02, 2009{% endtrans %}
        </p> #}
    </form>
{% endblock %}