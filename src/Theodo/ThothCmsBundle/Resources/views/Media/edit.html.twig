{% extends "TheodoThothCmsBundle::layout.html.twig" %}

{% set body_class = 'reversed' %}
{% set tab = 'content' %}
{% set nav = 'medias' %}

{% block javascripts_assets %}
<script type="text/javascript"> textarea_id = 'media_content' </script>
<script src="{{ asset('bundles/theodothothcms/js/page.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/theodothothcms/js/edit_area/edit_area_full.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/theodothothcms/js/twig-highlight.js') }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/theodothothcms/css/page.css') }}" type="text/css" media="all" />
{% endblock %}

{% block page_title %}
{% trans %}Edit Media{% endtrans %}
{% endblock %}

{% form_theme form 'TheodoThothCmsBundle:Form:form_custom_layout.html.twig' %}

{% block content %}
    {% if media is defined %}
    <h1>{% trans %}Edit Media{% endtrans %}</h1>
    <form class="edit_media" action="{{ url('media_update', { 'id': media.id }) }}" method="post" {{ form_enctype(form) }}>
    {% else %}
    <h1>{% trans %}New Media{% endtrans %}</h1>
    <form class="edit_media" action="{{ url('media_new') }}" method="post" {{ form_enctype(form) }}>
    {% endif %}
        <div class="form_area">
            <p class="title">
                {{ form_row(form.name) }}
            </p>
            <div class="content">
                {{ form_row(form.file) }}
            </div>
            {{ form_rest(form) }}
        </div>
        <p class="buttons" style="clear: left;">
            <input class="button" type="submit" value="{% trans %}Save Changes{% endtrans %}" name="save-and-list" />
            <input class="button" type="submit" value="{% trans %}Save and Continue Editing{% endtrans %}" name="save-and-edit" />
            {% trans %}or{% endtrans %}
            <a class="list-media" href="{{ url('media_list') }}">{% trans %}Cancel{% endtrans %}</a>
            {# {% if media is defined %}
            <a href="{{ url('media_remove', { 'id': media.id }) }}">{% trans %}Remove{% endtrans %}</a>
            {% endif %}
            <a class="list-media" href="{{ url('media_list') }}">{% trans %}Back to list{% endtrans %}</a> #}
        </p>
        {# <p class="updated_line">
          {% trans %}Last Updated by <strong>Administrator</strong> at 07:27 am on January 02, 2009{% endtrans %}
        </p> #}
    </form>
{% endblock %}